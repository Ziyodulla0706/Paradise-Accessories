# ============================================
# Paradise Accessories - Environment Variables
# ============================================
# Copy this file to .env in project root and fill in your values
# NEVER commit .env to version control!

# ============================================
# Django Core Settings
# ============================================
# Set to False in production!
DEBUG=True

# Generate a new secret key for production:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-gp0x%2hvf^80#x59bqsp=j^xl1=qw_z&4+jrzo4@9ypl*z4$e1

# Comma-separated list of allowed hostnames
# For production: yourdomain.com,www.yourdomain.com,api.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# Database Configuration
# ============================================
# SQLite (Development)
DATABASE_URL=sqlite:///db.sqlite3

# PostgreSQL (Production) - Format:
# DATABASE_URL=postgresql://username:password@host:port/database_name
# Example:
# DATABASE_URL=postgresql://paradise_user:secure_password@localhost:5432/paradise_db

# Database connection pooling (PostgreSQL only)
# DB_CONN_MAX_AGE=600

# ============================================
# CORS & CSRF Settings
# ============================================
# Comma-separated list of allowed origins for CORS
# For production: https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Comma-separated list of trusted origins for CSRF
# For production: https://yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# Email Configuration (Gmail SMTP)
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Your Gmail address
EMAIL_HOST_USER=your-email@gmail.com

# Gmail App Password (NOT your regular password!)
# Generate at: https://myaccount.google.com/apppasswords
EMAIL_HOST_PASSWORD=your-app-password-here

# Default from email (usually same as EMAIL_HOST_USER)
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Admin email for notifications
ADMIN_EMAIL=admin@yourdomain.com

# ============================================
# Telegram Bot Configuration (Optional)
# ============================================
# Create bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-bot-token-here

# Get chat ID by messaging your bot and visiting:
# https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
TELEGRAM_CHAT_ID=your-chat-id-here

# ============================================
# Static & Media Files
# ============================================
# Static files URL (default: /static/)
STATIC_URL=/static/

# Media files URL (default: /media/)
MEDIA_URL=/media/

# ============================================
# Security Settings
# ============================================
# Rate limiting for contact form (requests per hour per IP)
RATE_LIMIT_CONTACT_FORM=5

# File upload settings
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760

# ============================================
# Logging Configuration
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional, leave empty for console only)
# LOG_FILE_PATH=/var/log/paradise_accessories/django.log

# ============================================
# Performance & Optimization
# ============================================
# Database connection timeout (seconds)
DB_CONN_TIMEOUT=30

# Enable database connection pooling (PostgreSQL)
DB_CONN_MAX_AGE=600

# ============================================
# Monitoring & Health Checks
# ============================================
# Health check endpoint enabled (default: True)
ENABLE_HEALTH_CHECK=True

# ============================================
# Production Deployment
# ============================================
# Gunicorn workers (auto-detected if not set)
# GUNICORN_WORKERS=4

# Gunicorn timeout (seconds)
# GUNICORN_TIMEOUT=120

# ============================================
# Optional: Sentry Error Tracking
# ============================================
# SENTRY_DSN=your-sentry-dsn-here
# SENTRY_ENVIRONMENT=production
